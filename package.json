{
  "name": "@staart/site",
  "version": "0.9.38",
  "main": "dist/index.js",
  "repository": "git@github.com:staart/site",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc",
    "generate": "node dist/index.js",
    "build": "npm run compile && npm run generate",
    "increment-package": "node setup/increment.js",
    "prettier-all": "prettier '{src,setup}/**/*.{ts,js,json}' --write",
    "watch-build": "onchange '{src}/**/*.ts' -- yarn build",
    "watch-prettier": "onchange '{src}/**/*.{ts,json}' -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn increment-package && yarn prettier-all && git add ."
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "concurrently": "^5.0.0",
    "cosmiconfig": "^5.2.1",
    "front-matter": "^3.0.2",
    "fs-extra": "^8.1.0",
    "git-url-parse": "^11.1.2",
    "handlebars": "^4.4.3",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "marked": "^0.7.0",
    "recursive-readdir": "^2.2.2",
    "sass": "^1.23.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/fs-extra": "^8.0.0",
    "@types/git-url-parse": "^9.0.0",
    "@types/html-minifier": "^3.5.3",
    "@types/marked": "^0.6.5",
    "@types/node": "^12.6.3",
    "@types/recursive-readdir": "^2.2.0",
    "@types/sass": "^1.16.0",
    "@types/signale": "^1.2.1",
    "husky": "^3.0.9",
    "node-cache": "^4.2.1",
    "onchange": "^6.1.0",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  }
}